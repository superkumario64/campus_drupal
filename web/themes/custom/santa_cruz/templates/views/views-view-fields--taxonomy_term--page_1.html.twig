{% set image = fields.field_teaser_image.content|render|striptags('<img>')|trim %}
{% set url = fields.view_node.content|render|striptags|trim %}

<a href="{{ url }}" class="news-card" aria-label="">
  <div class="image">{{ fields.field_teaser_image.content }}</div>
  <div class="news-card-content">
    <div class="category btn-link">{{ fields.field_categories.content }}</div>
    <div class="underline">
      <h3>{{ fields.title.content|render|striptags|trim }}</h3>
      <p class="tags">{{ fields.field_date.content|render|striptags|trim }}</p>
    </div>
  </div>
</a>
